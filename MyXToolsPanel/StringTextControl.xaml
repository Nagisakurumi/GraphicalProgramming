<UserControl x:Class="MyXToolsPanel.StringTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyXToolsPanel"
             mc:Ignorable="d" 
             d:DesignHeight="300" Name="main" Height="29.057" Width="280">
    <StackPanel Orientation="Horizontal" Width="{Binding Path=Width,ElementName=main}" Height="{Binding ElementName=main,Path=Height}">
        <TextBlock Text="属性名称" Height="{Binding ElementName=main,Path=Height}" FontSize="22" HorizontalAlignment="Left" Name="NameBlock" Width="147"/>
        <TextBox Width="133" Height="{Binding ElementName=main,Path=Height}" Background="#33F7F7F7" HorizontalAlignment="Right" KeyDown="TextBox_KeyDown" Name="Value" FontSize="22"></TextBox>
    </StackPanel>
</UserControl>
