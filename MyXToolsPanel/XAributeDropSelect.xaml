<UserControl x:Class="MyXToolsPanel.XAributeDropSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyXToolsPanel"
             mc:Ignorable="d" Name="main" Height="80" Width="156.667">
    <StackPanel Orientation="Vertical" Height="{Binding ElementName=main,Path=Height}" Width="{Binding ElementName=main,Path=Width}" Name="mainpanel" Background="#FF2E2C2C">
        <Button Height="40" Width="{Binding ElementName=main,Path=Width}" FontSize="22" Foreground="#FFE2E2E2" Background="#33DDDDDD" Click="Get_MouseClick">获取该属性的值</Button>
        <Button Height="40" Width="{Binding ElementName=main,Path=Width}" FontSize="22" Foreground="#FFE4E2E2" Background="#33DDDDDD" Click="Set_MouseClick">设置该属性的值</Button>
    </StackPanel>
</UserControl>
